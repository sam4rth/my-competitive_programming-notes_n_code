{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run a.exe",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/a.exe", // or a.out
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
